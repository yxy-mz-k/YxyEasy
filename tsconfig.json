{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "api/*": ["./src/api/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "plugins/*": ["./src/plugins/*"],
      "router/*": ["./src/router/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"],
      "views/*": ["./src/views/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
